@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-offset-4 col-md-5">
            <div class="form_head ">
                <div class="input-group">
                    <input class="form-control" id="input_url" placeholder="www.example.com" value="http://www.mk.ru/" />@*http://moscow.megafon.ru/*@
                    <span class="input-group-btn">
                        @Html.ActionLink("Start test", "Compute", "Home", null, new
                   {
                       @class = "btn btn-default",
                       id = "ajaxComputeLink",
                       data_ajax = "true",
                       data_ajax_method = "POST",
                       data_ajax_update = "#outPut"
                   })
                    </span>
                </div>
            </div>
            <img id="wait_loader" src="~/Content/Images/1 (1).gif" />

            @* History Button *@
            <button id="historyBtn" class="btn btn-info historyBtn" data-toggle="modal" data-target="#historyModal" data-update-custom="#historyContainer" data-url=@Url.Action("History")>History</button>
        </div>
    </div>

    <section id="graphics" class="row">
        <div id="chartContainer"></div>
    </section>

    <section id="sectionTableResult" class="row">
        <div id="tableContainer" class="col-md-offset-1 col-md-10"></div>
    </section>
</div>

<!-- Modal -->
<div class="modal fade" id="historyModal" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center">History</h4>
            </div>

            <!-- Modal body-->
            <div id="historyContainer" class="modal-body">
            </div>
        </div>

    </div>
</div>


@section signalR{
    @Scripts.Render("~/bundles/signalR")
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/User's_JS/build/index.js"></script>
    @*<script src="~/Scripts/User's_JS/indexSignalR.js"></script>*@
}

