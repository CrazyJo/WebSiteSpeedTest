@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-offset-4 col-md-5">
            <div class="form_head ">
                <div class="input-group">
                    <input class="form-control" id="input_url" placeholder="www.example.com" value="https://jobs.dou.ua/companies/ukad-group/vacancies/25615/?from=rs" />
                    <span class="input-group-btn">
                        @Html.ActionLink("Start test", "Compute", "Home", null, new
                   {
                       @class = "btn btn-default",
                       id = "ajaxLink",
                       data_ajax = "true",
                       data_ajax_method = "POST",
                       data_ajax_update = "#outPut"
                   })
                    </span>
                </div>
            </div>
            <img id="wait_loader" src="~/Content/Images/1 (1).gif" />


        </div>

        <section id="tableResult">
            <div class="col-md-12">
                <div class="col-md-offset-2 col-md-8">
                    <table class="table table-striped table-bordered table-hover">
                        <tbody id="outPutTB"></tbody>
                    </table>
                </div>
            </div>
        </section>

    </div>
</div>

@section signalR{
    @Scripts.Render("~/bundles/signalR")
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/indexSignalR.js"></script>
}

@section scripts{
    <script>
        (function ()
        {
            var wLoader = $("#wait_loader");
            var sectionTabRes = $("#tableResult");


            $("#ajaxLink")
                .click(function ()
                {
                    wLoader.show();
                    sectionTabRes.show();
                    $("#outPutTB").html("<tr><th>Site Name</th><th>Time (ms)</th></tr>");
                    var ajMeth = $(this).attr('data-ajax-method');
                    var t_url = $(this).attr('href');
                    var input_data = $("#input_url").val();

                    $.ajax({
                        type: ajMeth,
                        url: t_url,
                        data: { url: input_data }
                    })
                        .then(function (e)
                        {
                            wLoader.hide();

                            //$("#outPut").html(e);
                        });
                    return false;
                });
        })();
    </script>
}